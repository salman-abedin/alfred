#!/bin/sh
#
# Panel Module Generator
# Dependencies: date, awk, sed, grep, top, free, sensors
# Usage: panel -(b|d|s|v|w)

case $1 in
	--battery-stat | -b)
		set -- /sys/class/power_supply/BAT?/capacity
		read -r CAPACITY < "$1"
		printf "ðŸ”‹ %03d%%" "$CAPACITY"
		;;
	--time | -t) printf "%s" "$(date +'ðŸ•° %H : %M')" ;;
	--time-america | -T) printf "%s" "$(TZ=America/New_York date +'ðŸ•° %H : %M')" ;;
	--date | -d) printf "%s" "$(date +'ðŸ—“ %a, %d %b')" ;;
	--date-time | -D) printf "%s" "$(date +'ðŸ—“ %a, %d %b   ðŸ•° %H : %M')" ;;
	--web | -w)
		read -r ETHERNET < /sys/class/net/eth0/carrier
		if ! connected; then
			printf "%s" "âŒ 000"
		elif [ "$ETHERNET" = 1 ]; then
			printf "ðŸŒ 100"
		else
			printf "ðŸŒ %s" \
				"$(awk 'FNR == 3 { printf "%03d", $3*100/70 }' /proc/net/wireless)"
		fi
		;;
	--sys-stat | -s)
		cpu="$(top -b -n 1 | awk '(NR==3){
    if( $8 == "id," )
        print "000"
    else
        printf "%03d", 100 - $8
    }')"
		mem="$(free -m | awk '(NR==2){ printf "%04d", $3 }')"
		temp="$(sensors | awk '(/Core 0/){printf $3}' | sed 's/\.0//; s/+//')"
		printf "ðŸ§  %s  ðŸŽ %s ðŸŒ¡ %s" "$mem" "$cpu" "$temp"
		;;

	--mailbox | -m)
		for file in ~/.local/share/mail/INBOX/new/*; do
			[ -f "$file" ] || continue
			printf '%s\n' "$file"
		done | {
			while IFS= read -r line || [ -n "$line" ]; do
				lines=$((lines + 1))
			done \
				&& printf "ðŸ“«  %s" "${lines:-0}"
		}
		;;

	--vol-stat | -v)
		showstat() {
			if amixer get Master | grep -o -m 1 "off" > /dev/null; then
				printf "ðŸ”‡ 000"
			else
				printf "ðŸ”Š %03d" \
					"$(amixer get Master | grep -o -m 1 "[0-9]\+%" | sed 's/%//')"
			fi
		}
		showstat
		;;
	*) exit 1 ;;
esac

